{
  "name": "bitcore-client",
  "description": "Wallet client for Bitcore node",
  "engines": {
    "node": ">=8.0.0"
  },
  "version": "8.25.14",
  "author": "Justin Langston <nitsujlangston@gmail.com>",
  "main": "./ts_build/index.js",
  "types": "./ts_build/index.d.ts",
  "scripts": {
    "build": "npm run compile",
    "clean": "rm -rf ./ts_build",
    "pub": "npm run compile && npm  publish",
    "watch": "tsc --watch",
    "compile": "npm run clean && tsc",
    "test": "mocha ./test/unit",
    "precommit": "npm run fix && npm run lint",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "tslint -c ../../tslint.json 'src/**/*.ts'",
    "lint:style": "prettier --check 'src/**/*.ts'",
    "fix": "npm run fix:lint && npm run fix:style",
    "fix:lint": "tslint --fix -c ../../tslint.json 'src/**/*.ts'",
    "fix:style": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "JSONStream": "~1.3.1",
    "async": "2.6.4",
    "bcrypt": "3.0.8",
    "bitcore-mnemonic": "^8.25.47",
    "commander": "2.20.3",
    "crypto-wallet-core": "^8.25.47",
    "elliptic": "^6.5.7",
    "level-js": "4.0.2",
    "leveldown": "5.6.0",
    "levelup": "4.4.0",
    "mkdirp": "0.5.6",
    "mongodb": "^3.7.4",
    "progress": "2.0.3",
    "promptly": "3.2.0",
    "request": "2.88.2",
    "request-promise-native": "1.0.9",
    "secp256k1": "3.8.0",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.1",
    "@types/bcryptjs": "2.4.6",
    "@types/elliptic": "6.4.18",
    "@types/ethereumjs-util": "5.2.0",
    "@types/mongodb": "3.6.20",
    "@types/node": "10.17.60",
    "@types/request": "2.48.12",
    "@types/request-promise-native": "1.0.21",
    "@types/secp256k1": "3.5.3",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.29.1",
    "mocha": "5.2.0",
    "sinon": "4.5.0",
    "typescript": "3.9.10"
  },
  "gitHead": "012cc0216a9bc6b195035855bd17149bad41acd1"
